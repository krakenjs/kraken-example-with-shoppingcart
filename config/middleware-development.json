{
    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": "kraken-devtools",
            "arguments": [
                "path:./public",
                "path:./.build",
                {
                    "livereload": {
                        "debug": false,
                        "exts": [ "dust", "less" ]
                    },
                    "dust": {
                        "module": "kraken-devtools/lib/plugins/dust",
                        "files": "/templates/**/*.js",
                        "base": "templates"
                    },
                    "less": {
                        "module": "kraken-devtools/lib/plugins/less",
                        "files": "/css/**/*.css"
                    },
                    "copier": {
                        "module": "kraken-devtools/lib/plugins/copier",
                        "files": "**/*"
                    }
                }
            ]
        }

    }
}